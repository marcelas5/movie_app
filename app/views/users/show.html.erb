<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
  <hr/>
  <div class="user-details">
  <h3>Member Since</h3> 
    <p><%= @user.created_at.strftime("%B %Y") %>
  </p>
  </div>
  <div class="actions">
    <%= link_to "Edit Account", edit_user_path(@user), 
                    class:"button edit"%>
  </div>
</section>
